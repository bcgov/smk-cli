
{
    "version": "<%= app.version %>",
    "name": "<%= app.name %>",
    "createdBy": "<%= app.author %>",
    "createdDate": "<%= app.createdDate %>",
    "viewer": {
        "type": "<%= app.viewer %>",
        "location": {
            "extent": [
                -140.80078125000004,
