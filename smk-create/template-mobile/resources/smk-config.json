
{
    "version": "<%= app.version %>",
    "name": "<%= app.name %>",
    "createdBy": "<%= app.author %>",
    "createdDate": "<%= app.createdDate %>",
    "viewer": {
        "type": "<%= app.viewer %>",
        "location": {
            "extent": [
                -140.80078125000004,
                61.62728646147466,
                -108.72070312500002,
                46.13417004624326
            ],
            "center": [
                -124.76074218750003,
                51.88072825385896
            ],
            "zoom": 6.0
        },
        "baseMap": "<%= app.baseMap %>",
        "device": "mobile"
    },
    "tools": [
        {
            "type": "toolbar",
            "enabled": true
        },
        {
            "type": "list-menu",
            "enabled": true,
            "title": "<%= app.title %>"
        },
        {
            "type": "shortcut-menu",
            "enabled": true
        },
        {
            "type": "pan",
            "enabled": <%= !!app.tool.pan %>
        },
        {
            "type": "zoom",
            "enabled": <%= !!app.tool.zoom %>,
            "control": false
        },
        {
            "type": "about",
            "enabled": <%= !!app.tool.about %>,
            "title": "About <%= app.title %>",
            "position": "list-menu",
            "content": "<p>Welcome to SMK!</p><p><%= app.description %></p>"
        },
        {
            "type": "layers",
            "enabled": <%= !!app.tool.layers %>,
            "position": "shortcut-menu"
        },
        {
            "type": "baseMaps",
            "enabled": <%= !!app.tool.baseMaps %>,
            "position": "list-menu"
        },
        {
            "type": "identify",
            "enabled": <%= !!app.tool.identify %>,
            "position": "list-menu",
            "showPanel": true,
            "showWidget": true,
            "style": {
                "strokeWidth": 1.0,
                "strokeStyle": "1, 1",
                "strokeColor": "#000000",
                "strokeOpacity": 0.8,
                "fillColor": "#000000",
                "fillOpacity": 0.5,
                "markerSize": [
                    20,
                    20
                ],
                "markerOffset": [
                    10,
                    0
                ]
            }
        },
        {
            "type": "search",
            "enabled": <%= !!app.tool.search %>
        },
        {
            "type": "coordinate",
            "enabled": false
        },
        {
            "type": "measure",
            "enabled": <%= !!app.tool.measure %>,
            "position": "list-menu"
        },
        {
            "type": "markup",
            "enabled": false
        },
        {
            "type": "scale",
            "enabled": <%= !!app.tool.scale %>
        },
        {
            "type": "minimap",
            "enabled": false
        },
        {
            "type": "directions",
            "enabled": <%= !!app.tool.directions %>,
            "position": "shortcut-menu"
        },
        {
            "type": "location",
            "enabled": <%= !!app.tool.location %>
        },
        {
            "type": "select",
            "enabled": <%= !!app.tool.select %>,
            "position": "list-menu"
        }
    ]
}